<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8sp"
    android:background="@drawable/item_selector"
    >
    <TextView
        android:id="@+id/source_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/sort_item_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
        <ImageView
            android:padding="4dp"
            android:id="@+id/source_img1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            />
        <ImageView
            android:padding="4dp"
            android:id="@+id/source_img2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/source_writer"
            android:drawableLeft="@drawable/writer"
            style="@style/sort_item_sub"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:drawableLeft="@drawable/create_time"
            android:layout_height="wrap_content"
            android:id="@+id/source_time"
            style="@style/sort_item_sub"
            />
    </LinearLayout>
</LinearLayout>
